        <TextBox x:Name="CommentTextBox" HorizontalAlignment="Left" Height="51" Margin="5,6,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="273" TextChanged="CommentTextBox_TextChanged" PreviewKeyDown="CommentTextBox_PreviewKeyDown" />
        <DatePicker HorizontalAlignment="Left" Margin="5,62,0,0" VerticalAlignment="Top" Height="24" Width="137" SelectedDateFormat="Long" IsTodayHighlighted="False"/>
    </Grid>
</UserControl>
